@model ArticleListViewModel

@{
    ViewData["Title"] = "Blogs";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <a asp-action="Create">Create new article</a>

    <form asp-action="Index" method="get" class="form-parent" style="max-width: 20vw; margin-left: auto; margin-right: auto; margin-top: 1rem;">
        <div class="form-group">
            <label asp-for="Search" class="control-label">Title</label>
            <input asp-for="Search" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Tag</label>
            <select asp-for="Tags" asp-items="Model.TagsOptions" style="width: 100%;">
                <option value="None">None</option>
            </select>
        </div>
        <div class="form-group d-flex gap-2">
            <label class="control-label">Sort</label>
            <select asp-for="SortBy" asp-items="Model.SortByOptions" style="width: 50%;">
            </select>
            <select asp-for="SortOrder" asp-items="Model.SortOrderOptions" style="width: 50%;">
            </select>
        </div>
        <div class="form-group">
            <input type="submit" value="Search" class="btn btn-primary" />
        </div>
    </form>

    <div class="articles-container">
        @foreach (var article in Model.Articles!)
        {
            <div class="article-container">
                <a asp-action="Details" asp-route-id="@article.Id">@article.Title</a>
            </div>
        }
    </div>
</div>
