@model Article

<div class="input-field-item tags-input">
    <div class="title">
        <i class="bi bi-tag" style="font-size: 1em;"></i>
        <label asp-for="Tags" class="control-label"></label>
    </div>
    <div class="content">
        <ul id="tags-list"><input type="text" spellcheck="false" id="tags-input"></ul>
        <span class="form-text" id="tags-input-guide">Press enter or comma after each tag<span id="tags-input-count">(n tags remaining)</span> </span>
    </div>
    <div class="details" id="tags-input-details">
        <button type="button">Remove All</button>
    </div>
    <input asp-for="TagsString" type="hidden" id="tags-hidden"/>
</div>